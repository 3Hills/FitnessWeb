
@{
    ViewBag.Title = "Antrenmana Hareket Ekle";
}
@*@using FitnessUygulamasi.ViewModels;*@
@{ 
    string seciliAntrenmanDurum = Model[0].Antrenman.antrenmanDurum;
    if (seciliAntrenmanDurum == "0")
    {
        seciliAntrenmanDurum = "Yapılmadı";
    }
    else {
        seciliAntrenmanDurum = "Yapıldı";
    }

}
<div class="Satir">
    <div class="col-4"></div>
    <div class="col-4">
        <div class="simpleboxHeader">Antrenmana Hareket Ekle</div>
        <div class="simpleboxContent">
            <div class="formBox">
                <form action="/Action/AntrenmanaHareketiKaydet" method="post">
                    <ul>
                        <li>Antrenman Açıklaması : </li>
                        <li>
                            <input type="text" class="defaultInput inputFullWidth" value="@Model[0].Antrenman.antrenmanAciklama" disabled>
                            <input type="hidden" name="antrenmanID" value="@Model[0].Antrenman.antrenmanID" />
                        </li>
                        <li>Antrenman Tarihi : </li>
                        <li><input type="text" class="defaultInput" value="@String.Format("{0:dd MMMM yyyy dddd}", Model[0].Antrenman.antrenmanTarih)" disabled></li>
                        <li>Antrenman Durumu : </li>
                        <li><input type="text" class="defaultInput" value="@seciliAntrenmanDurum" disabled></li>
                        <li>Eklenecek Hareket : </li>
                        <li>
                            <select class="defaultInput" name="hareketID">
                            @foreach (var hareket in Model[0].Hareketler)
                            {
                                <option value="@hareket.hareketID">@hareket.hareketAdi</option>
                            }
                            </select>
                        </li>
                        <li>Hareket Sırası : </li>
                        <li><input type="text" class="defaultInput inputSmallWidth" name="hareketSira" placeholder="örn: 1" /></li>
                        <li><button><i class="fa fa-save"></i>&nbsp; Hareketi Antrenmana Ekle</button></li>
                    </ul>
                </form>
            </div>
        </div>
    </div>
    <div class="col-4"></div>
</div>