
@{
    ViewBag.Title = "Yeni Antrenman Ekle";
}
<div class="Satir">
    <div class="col-4"></div>
    <div class="col-4">
        <div class="simpleboxHeader UstBosluk">Yeni Antrenman Kaydı Oluştur</div>
        <div class="simpleboxContent">
            <div class="formBox">
                <form action="#" method="post">
                    <ul>
                        <li>Antrenman Açıklaması : </li>
                        <li><input type="text" class="defaultInput inputFullWidth" name="antrenmanAciklamasi" placeholder="örn: Göğüs ve arka kol antrenmanı." /></li>
                        <li>Antrenman Tarihi : </li>
                        <li><input type="date" class="defaultInput" name="antrenmanTarihi" /></li>
                        <li>Antrenman Durumu : </li>
                        <li><select class="defaultInput" name="antrenmanDurumu"><option value="0">Yapılmadı</option><option value="1">Yapıldı</option></select></li>
                        <li><button><i class="fa fa-save"></i>&nbsp; Antrenmanı Kaydet</button></li>
                    </ul>
                </form>
            </div>
        </div>
    </div>
    <div class="col-4"></div>
</div>